<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.market.pos.mapper.MembersMapper">    <resultMap id="MembersResultMap" type="com.market.pos.pojo.Members">        <id property="userid" column="userid"/>        <result property="password" column="password"/>        <result property="job" column="job"/>    </resultMap>    <!--查询所有的数据-->    <select id="getAllMembers" resultMap="MembersResultMap">        select * from members    </select>    <!--查询指定userid的数据-->    <select id="getMemberByUserid" resultMap="MembersResultMap">        select * from members where userid = #{userid}    </select>    <!--新增用户-->    <insert id="addMember" parameterType="Members" keyProperty="userid" useGeneratedKeys="true">        insert into members (userid , password , job) values (#{userid},#{password},#{job});    </insert>    <!--数据更新-->    <update id="updateMember" parameterType="Members">        update members        <trim prefix="set" suffixOverrides=",">            <if test="job != null">                job = #{job}            </if>        </trim>        where userid = #{userid}    </update>    <!--删除用户-->    <delete id="delMember" parameterType="int">        delete from members where userid = #{userid}    </delete>    <select id="findUser" resultType="String">        select userid from members where userid = #{userid}    </select></mapper>