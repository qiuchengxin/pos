<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.market.pos.mapper.IUserMapper">    <resultMap id="UserResultMap" type="com.market.pos.pojo.Users">        <id property="userid" column="userid"/>        <result property="username" column="username"/>        <result property="grade" column="grade"/>        <result property="updateTime" column="update_time"/>    </resultMap>    <!--查询所有的数据-->    <select id="getAllUser" resultMap="UserResultMap">        select * from users    </select>    <!--查询指定userid的数据-->    <select id="getUserByUserid" resultMap="UserResultMap">        select * from users where userid = #{userid}    </select>    <!--新增用户-->    <insert id="insertUser" parameterType="Users" keyProperty="userid" useGeneratedKeys="true">        insert into users (userid , username , grade , update_time) values (#{userid},#{username},#{grade},#{updateTime});    </insert>    <!--数据更新-->    <update id="updateUser" parameterType="Users">        update users        <trim prefix="set" suffixOverrides=",">            <if test="grade != null">                grade = #{grade}            </if>        </trim>        where userid = #{userid}    </update>    <!--删除用户-->    <delete id="delUser" parameterType="int">        delete from users where userid = #{userid}    </delete></mapper>